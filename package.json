{
  "name": "tiptap-shadcn-vue",
  "type": "module",
  "version": "0.1.0",
  "private": false,
  "packageManager": "pnpm@10.7.1",
  "description": "Shadcn + Tiptap component for Vue 3",
  "license": "MIT",
  "files": [
    "tiptap.json"
  ],
  "scripts": {
    "build": "pnpm build:registry && nuxt build",
    "build:registry": "tsx ./scripts/build-registry.ts",
    "dev:registry": "REGISTRY_URL=http://localhost:3000/r tsx ./scripts/build-registry.ts",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "generate:release:major": "npx changelogen@latest --major --push",
    "generate:release:minor": "npx changelogen@latest --minor --push",
    "generate:release:patch": "npx changelogen@latest --patch --push",
    "publish:package": "pnpm build && pnpm publish --no-git-checks --access public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.5.2",
    "@atlaskit/pragmatic-drag-and-drop-hitbox": "^1.0.3",
    "@iconify/vue": "^4.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@nuxt/icon": "1.11.0",
    "@tailwindcss/vite": "^4.1.2",
    "@tiptap/extension-character-count": "^2.11.7",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/extension-placeholder": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "@tiptap/vue-3": "^2.11.7",
    "@types/node": "^22.14.0",
    "@vueuse/core": "^13.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.23.0",
    "lucide-vue-next": "^0.487.0",
    "notivue": "^2.4.5",
    "nuxt": "^3.16.2",
    "oxc-parser": "^0.62.0",
    "pathe": "^2.0.3",
    "reka-ui": "^2.2.0",
    "shadcn-nuxt": "2.0.0",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^4.1.2",
    "tsx": "^4.19.3",
    "tw-animate-css": "^1.2.5",
    "typescript": "^5.8.2",
    "vaul-vue": "^0.4.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "zod": "^3.24.2"
  }
}
